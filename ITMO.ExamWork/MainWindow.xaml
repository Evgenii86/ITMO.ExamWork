                        </ListView.View>
                    </ListView>

                    <StackPanel HorizontalAlignment="Center"  Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" Background="Linen">
                        <Button x:Name="subscription_createButton" Content="Добавить" Click="SubscriptionCreateButton_Click" />
                        <Button x:Name="subscription_updateButton" Content="Обновить" Click="SubscriptionUpdateButton_Click" />
                        <Button x:Name="subscription_deleteButton" Content="Удалить" Click="SubscriptionDeleteButton_Click" />
                    </StackPanel>
                </Grid>
            </TabItem.Content>
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Teal"  Width="20" Height="10" RadiusX="10" RadiusY="10" Margin="2" />
                    <TextBlock Margin="5" Foreground="Tomato"  FontWeight="Bold" FontSize="18">Карты клиентов</TextBlock>
                </StackPanel>
            </TabItem.Header>
            <TabItem.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.3*" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="0.3*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="0.1*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="34" FontWeight="Bold" HorizontalAlignment="Center"  Foreground="Tomato">Карты клиентов</TextBlock>

                    <StackPanel Grid.Row="1" Grid.Column="0" Background="Khaki">
                        <TextBlock FontSize="20" HorizontalAlignment="Center" Foreground="DarkSlateGray" FontWeight="Medium">Добавление и редактирование</TextBlock>
                        <Grid DataContext="{StaticResource ValCustomerCard}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="1.5*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Foreground="DarkSlateGray" FontSize="14">Введите ID клиента</Label>
                            <TextBox x:Name="CustomerCardClientIDBox" Grid.Column="1" HorizontalAlignment="Center" MaxLength="50" FontSize="20" Width="250">
                                <TextBox.Text>
                                    <Binding Path="ClientId">
                                        <Binding.ValidationRules>
                                            <ExceptionValidationRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                        </Grid>
                        <Grid DataContext="{StaticResource ValCustomerCard}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="1.5*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Foreground="DarkSlateGray" FontSize="14">Введите ID абонемента</Label>
                            <TextBox Name="CustomerCardSubscriptionIDBox" Grid.Column="1" MaxLength="50" HorizontalAlignment="Center" FontSize="20" Margin="5" Width="250">
                                <TextBox.Text>
                                    <Binding Path="SubscriptionId">
                                        <Binding.ValidationRules>
                                            <ExceptionValidationRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                        </Grid>
                    </StackPanel>
                    <ListView Name="customerCardsListView" Grid.Row="1" Grid.Column="1" Background="MintCream"  SelectionChanged="customerCardListView_selected" >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn DisplayMemberBinding="{Binding Id}" Header="ID карты" Width="300" />
                                <GridViewColumn DisplayMemberBinding="{Binding ClientId}" Header="ID клиента" Width="300" />
                                <GridViewColumn DisplayMemberBinding="{Binding SubscriptionId}" Header="ID абонемента" Width="300" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <StackPanel HorizontalAlignment="Center"  Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" Background="Linen">
                        <Button x:Name="customerCard_createButton" Content="Добавить" Click="CustomerCardCreateButton_Click" />
                        <Button x:Name="customerCard_updateButton" Content="Обновить" Click="CustomerCardUpdateButton_Click" />
                        <Button x:Name="customerCard_deleteButton" Content="Удалить" Click="CustomerCardDeleteButton_Click" />
                    </StackPanel>
                </Grid>
            </TabItem.Content>
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Aquamarine"  Width="20" Height="10" RadiusX="10" RadiusY="10" Margin="2" />
                    <TextBlock Margin="5" Foreground="DarkRed"  FontWeight="Bold" FontSize="18">Залы</TextBlock>
                </StackPanel>
            </TabItem.Header>
            <TabItem.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.3*" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="0.3*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="0.1*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="34" FontWeight="Bold" HorizontalAlignment="Center"  Foreground="DarkRed">Залы</TextBlock>

                    <StackPanel Grid.Row="1" Grid.Column="0" Background="CadetBlue">
                        <TextBlock FontSize="20" HorizontalAlignment="Center" Foreground="DarkSlateGray" FontWeight="Medium">Добавление и редактирование</TextBlock>
                        <Grid DataContext="{StaticResource ValRoom}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="1.5*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Foreground="DarkSlateGray" FontSize="14">Введите наименование зала</Label>
                            <TextBox x:Name="RoomNameBox" Grid.Column="1" HorizontalAlignment="Center" MaxLength="50" FontSize="20" Width="250">
                                <TextBox.Text>
                                    <Binding Path="Name">
                                        <Binding.ValidationRules>
                                            <ExceptionValidationRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                        </Grid>
                    </StackPanel>
                    <ListView Name="roomsListView" Grid.Row="1" Grid.Column="1" Background="LightPink"  SelectionChanged="roomListView_selected" >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn DisplayMemberBinding="{Binding Id}" Header="ID зала" Width="400" />
                                <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Наименование зала" Width="400" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <StackPanel HorizontalAlignment="Center"  Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" Background="Linen">
                        <Button x:Name="room_createButton" Content="Добавить" Click="RoomCreateButton_Click" />
                        <Button x:Name="room_updateButton" Content="Обновить" Click="RoomUpdateButton_Click" />
                        <Button x:Name="room_deleteButton" Content="Удалить" Click="RoomDeleteButton_Click" />
                    </StackPanel>
                </Grid>
            </TabItem.Content>
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Moccasin"  Width="20" Height="10" RadiusX="10" RadiusY="10" Margin="2" />
                    <TextBlock Margin="5" Foreground="MidnightBlue"  FontWeight="Bold" FontSize="18">Виды занятий</TextBlock>
                </StackPanel>
            </TabItem.Header>
            <TabItem.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.3*" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="0.3*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="0.1*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="34" FontWeight="Bold" HorizontalAlignment="Center"  Foreground="MidnightBlue">Виды занятий</TextBlock>

                    <StackPanel Grid.Row="1" Grid.Column="0" Background="AntiqueWhite">
                        <TextBlock FontSize="20" HorizontalAlignment="Center" Foreground="DarkSlateGray" FontWeight="Medium">Добавление и редактирование</TextBlock>
                        <Grid DataContext="{StaticResource ValTypeOfTraining}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="1.5*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Foreground="DarkSlateGray" FontSize="14">Введите тип занятия</Label>
                            <TextBox x:Name="TypeOfTrainingDenominationBox" Grid.Column="1" HorizontalAlignment="Center" MaxLength="50" FontSize="20" Width="250">
                                <TextBox.Text>
                                    <Binding Path="Denomination">
                                        <Binding.ValidationRules>
                                            <ExceptionValidationRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                        </Grid>
                    </StackPanel>
                    <ListView Name="typeOfTrainingsListView" Grid.Row="1" Grid.Column="1" Background="Chartreuse"  SelectionChanged="typeOfTrainingListView_selected" >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn DisplayMemberBinding="{Binding Id}" Header="ID занятия" Width="400" />
                                <GridViewColumn DisplayMemberBinding="{Binding Denomination}" Header="Наименование" Width="400" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <StackPanel HorizontalAlignment="Center"  Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" Background="Linen">
                        <Button x:Name="typeOfTraining_createButton" Content="Добавить" Click="TypeOfTrainingCreateButton_Click" />
                        <Button x:Name="typeOfTraining_updateButton" Content="Обновить" Click="TypeOfTrainingUpdateButton_Click" />
                        <Button x:Name="typeOfTraining_deleteButton" Content="Удалить" Click="TypeOfTrainingDeleteButton_Click" />
                    </StackPanel>
                </Grid>
            </TabItem.Content>
        </TabItem>
    </TabControl>

    
</Window>
