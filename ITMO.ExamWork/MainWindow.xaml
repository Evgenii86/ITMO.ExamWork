                                        <Binding.ValidationRules>
                                            <ExceptionValidationRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                        </Grid>
                        <Grid DataContext="{StaticResource ValSubscription}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="1.5*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Foreground="DarkSlateGray" FontSize="14">Введите цену</Label>
                            <TextBox Name="SubscriptionPriceBox" Grid.Column="1" MaxLength="50" HorizontalAlignment="Center" FontSize="20" Margin="5" Width="250">
                                <TextBox.Text>
