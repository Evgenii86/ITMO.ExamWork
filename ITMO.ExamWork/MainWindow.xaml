                    <ListView Name="subscriptionsListView" Grid.Row="1" Grid.Column="1" Background="Yellow"  SelectionChanged="subscriptionListView_selected" >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn DisplayMemberBinding="{Binding Id}" Header="ID" Width="200" />
